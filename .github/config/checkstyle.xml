<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
    "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "https://checkstyle.org/dtds/configuration_1_3.dtd">

<!--
    Checkstyle Enterprise Configuration
    - Javadoc desativado
    - Regras modernas para Java 17+
    - Foco em legibilidade, consistência e erros críticos
    - Compatível com pipelines CI/CD (GitHub Actions)
-->

<module name="Checker">

    <!-- ==============
         GLOBAL CONFIG
         ============== -->
    <property name="charset" value="UTF-8"/>

    <!-- Ignorar código gerado -->
    <module name="SuppressionFilter">
        <property name="file" value="checkstyle-suppressions.xml" optional="true"/>
    </module>

    <!-- Não exigir Javadoc em nada -->
    <module name="TreeWalker">
        <module name="JavadocType">
            <property name="severity" value="ignore"/>
        </module>
        <module name="JavadocMethod">
            <property name="severity" value="ignore"/>
        </module>
        <module name="JavadocVariable">
            <property name="severity" value="ignore"/>
        </module>
        <module name="MissingJavadocMethod">
            <property name="severity" value="ignore"/>
        </module>
        <module name="MissingJavadocType">
            <property name="severity" value="ignore"/>
        </module>

        <!-- ==========================
             PADRÕES DE NOMEAÇÃO
             ========================== -->
        <module name="TypeName"/>
        <module name="MethodName"/>
        <module name="ParameterName"/>
        <module name="LocalVariableName"/>
        <module name="MemberName"/>
        <module name="ConstantName"/>

        <!-- ==========================
             FORMATAÇÃO
             ========================== -->
        <module name="Indentation">
            <property name="basicOffset" value="4"/>
            <property name="braceAdjustment" value="0"/>
            <property name="tabWidth" value="4"/>
        </module>

        <module name="LineLength">
            <property name="max" value="140"/>
            <property name="ignorePattern" value="^package.*|^import.*"/>
        </module>

        <module name="WhitespaceAround"/>
        <module name="WhitespaceAfter"/>
        <module name="NoLineWrap"/>

        <module name="LeftCurly">
            <property name="option" value="eol"/>
        </module>

        <module name="RightCurly">
            <property name="option" value="alone"/>
        </module>

        <module name="NeedBraces"/>

        <!-- ==========================
             QUALIDADE DE CÓDIGO
             ========================== -->

        <!-- Proíbe imports desnecessários -->
        <module name="UnusedImports"/>

        <!-- Evita importações wildcard -->
        <module name="AvoidStarImport"/>

        <!-- Evita finais de linh
